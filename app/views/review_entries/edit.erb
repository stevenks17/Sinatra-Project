<h2> Edit a Review </h2>


<form class="" action="/review_entries/<%= @review_info.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="title">Title:</label>
  <input type="text" name="title" value ="<%= @review_info.title %>">
  
  <h3><label for="content">Content:</label></h3>
  
 
  <textarea name="content" style="width:auto; height:auto;"><%= @review_info.content %></textarea>
  <br>
  <input type="submit" name="" value="Edit Review">
</form>
